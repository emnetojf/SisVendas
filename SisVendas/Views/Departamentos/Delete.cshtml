@model SisVendas.Models.Departamento

@{
    ViewData["Title"] = "Deletar Departamento?";
}

<h4> @ViewData["Title"]</h4>


<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nome Departamento:")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.strDepto)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdDepto" />
        <input type="submit" value="Deletar" class="btn btn-default" /> |
        <a asp-action="Index">Retorna Lista</a>
    </form>
</div>
