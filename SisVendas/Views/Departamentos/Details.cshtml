@model SisVendas.Models.Departamento

@{
    ViewData["Title"] = "Detalhes Departamento";
}

<h4>@ViewData["Title"]</h4>


<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nome Departamento")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.strDepto)
