@model SisVendas.Models.Departamento

@{
    ViewData["Title"] = "Cadastrar Departamento";
}

<h4>@ViewData["Title"]</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="strDepto" class="control-label">Nome Departamento</label>
                <input asp-for="strDepto" class="form-control" />
                <span asp-validation-for="strDepto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
