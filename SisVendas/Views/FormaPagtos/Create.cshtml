@model SisVendas.Models.ViewModels.FormaPagtoFormViewModel

@{
    ViewData["Title"] = "Cadastrar Forma Pagto";
}


<h4>@ViewData["Title"]</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FormaPagto.strPagto" class="control-label">Nome Forma Pagto</label>
                <input asp-for="FormaPagto.strPagto" class="form-control" />
                <span asp-validation-for="FormaPagto.strPagto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retorna Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
