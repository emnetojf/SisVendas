@model SisVendas.Models.FormaPagto

@{
    ViewData["Title"] = "Deletar Forma Pagto?";
}

<h4>@ViewData["Title"]</h4>


<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nome Forma Pagto")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.strPagto)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPagto" />
        <input type="submit" value="Deletar" class="btn btn-default" /> |
        <a asp-action="Index">Retorna Lista</a>
    </form>
</div>
