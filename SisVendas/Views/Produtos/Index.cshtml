@model IEnumerable<SisVendas.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<h4>@ViewData["Title"]</h4>

<p>
    <a asp-action="Create">Cria Produto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Produto")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.douPreco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.strNomeProd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.douPreco)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProd">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdProd">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProd">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
